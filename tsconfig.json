{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@patson/*": [
        "./projects/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/.next/types/**/*.ts",
    "**/.next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6",
      "sourceMap": true,
      "inlineSourceMap": true,
      "esModuleInterop": true,
    }
  }
}